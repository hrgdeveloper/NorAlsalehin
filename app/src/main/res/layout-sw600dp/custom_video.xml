<RelativeLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:CircleProgressView="http://schemas.android.com/apk/res-auto"

    android:background="@android:color/transparent"

    xmlns:android="http://schemas.android.com/apk/res/android" >
    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginBottom="@dimen/_2sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:orientation="vertical"
        card_view:cardCornerRadius="@dimen/_5sdp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content">



                <ImageView
                    android:id="@+id/iv_video_image"
                    android:layout_width="wrap_content"
                   android:minWidth="@dimen/_200sdp"
                    android:layout_height="@dimen/_200sdp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_5sdp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/white" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_2sdp"
                    android:paddingStart="@dimen/_5sdp"
                    android:paddingEnd="@dimen/_5sdp"
                    android:text="04:15 2.1mb"
                    android:id="@+id/tv_video_video_time"
                    android:background="@drawable/tv_bg"
                    android:textColor="@android:color/black"
                    />

                <View
                    android:layout_width="@dimen/_37sdp"
                    android:layout_height="@dimen/_37sdp"
                    android:layout_gravity="center"
                    android:background="@drawable/round_background"
                    android:id="@+id/view_video_fake_white"
                    />

                <com.mikhaellopez.circularprogressbar.CircularProgressBar
                    android:id="@+id/cp_video"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="center"
                    app:cpb_background_progressbar_color="@color/cpb_background"
                    app:cpb_background_progressbar_width="3dp"
                    app:cpb_progressbar_color="@color/cpb_color"
                    app:cpb_progressbar_width="6dp"

                    />

                <ImageView
                    android:id="@+id/iv_video_download_playy"
                    android:layout_width="@dimen/_25sdp"
                    android:tint="@android:color/white"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/download" />
            </FrameLayout>

            <TextView
                android:id="@+id/tv_video_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginEnd="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:autoLink="web"
                android:text="بهترن "
                android:textColor="@color/cardview_dark_background" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="end"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/like"
                    android:id="@+id/iv_video_like"
                    android:layout_marginEnd="@dimen/_5sdp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/comment"
                    android:id="@+id/iv_video_comment"
                    android:layout_marginEnd="@dimen/_5sdp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_video_time"
                    android:textColor="@android:color/holo_green_dark"
                    android:text="14:25"
                    android:layout_gravity="center"
                    />
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
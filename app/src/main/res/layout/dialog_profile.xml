<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:id="@+id/toolbar_dialog_profile"
        android:layout_height="?attr/actionBarSize"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"
            android:id="@+id/iv_back_dialog"
            android:tint="@android:color/black"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="ارسال عکس"
            android:id="@+id/tv_dialog_send"
            android:layout_gravity="end"
            android:layout_marginRight="@dimen/_10sdp"
            />

    </android.support.v7.widget.Toolbar>
    <Button
        android:id="@+id/btn_gallery_dialog"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_one"
        android:layout_below="@+id/toolbar_dialog_profile"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/_12sdp"
        android:text="انتخاب عکس"
        android:textColor="@android:color/white"
        android:textStyle="bold" />
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/_70sdp"
        android:layout_margin="@dimen/_8sdp"
        android:layout_height="@dimen/_70sdp"
        android:layout_below="@+id/toolbar_dialog_profile"
        android:id="@+id/iv_profile_dialog"
        android:src="@drawable/profile"
         />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.developer.hrg.noralsalehin.Intero_Activity">
<android.support.v4.view.ViewPager
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/viewpager_intro">

</android.support.v4.view.ViewPager>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/white"
        android:layout_above="@+id/indicator"
        />

    <me.relex.circleindicator.CircleIndicator
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="48dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/l_intro_skip"
        android:textSize="@dimen/_14sdp"
        android:textColor="@android:color/white"
        android:background="@null"
        android:id="@+id/btn_intro_skip"
        android:layout_alignParentBottom="true"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/l_intro_next"
        android:textSize="@dimen/_14sdp"
        android:id="@+id/btn_intro_next"
        android:textColor="@android:color/white"
        android:layout_alignParentRight="true"
        android:background="@null"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentRight="true"

        android:layout_marginTop="@dimen/_8sdp"
        android:id="@+id/iv_custom_chanel_photo"
        android:layout_marginRight="@dimen/_8sdp"
        android:src="@android:drawable/ic_menu_camera"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:id="@+id/tv_custom_chanel_name"
        android:textColor="@android:color/black"
        android:text="نور الصالحین"

        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_toLeftOf="@+id/iv_custom_chanel_photo"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="آخرین پیام "
        android:singleLine="true"
        android:id="@+id/tv_custom_chanel_last"
        android:maxLines="1"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_below="@id/tv_custom_chanel_name"
        android:layout_toLeftOf="@+id/tv_custom_chanel_admin"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mohamad"
        android:layout_below="@+id/tv_custom_chanel_name"
       android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:textColor="@color/circleColor"
        android:id="@+id/tv_custom_chanel_admin"
        android:layout_toLeftOf="@+id/iv_custom_chanel_photo"

         />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_custom_chanel_count"
        android:layout_marginLeft="@dimen/_5sdp"
        android:text="2"
        android:minHeight="@dimen/_15sdp"
        android:minWidth="@dimen/_15sdp"
        android:gravity="center"
        android:layout_below="@+id/tv_custom_chanel_last"
        android:textSize="@dimen/_10sdp"
        android:textColor="@android:color/white"
        android:background="@drawable/bg_circle"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_5sdp"
        android:text="14:05"
        android:id="@+id/tv_custom_chanel_time"
        android:layout_marginTop="@dimen/_5sdp"
        />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/test"
            android:layout_below="@+id/iv_custom_chanel_photo"/>
   <View
       android:layout_width="match_parent"
       android:layout_height="0.3dp"
       android:background="@android:color/black"
       android:layout_marginLeft="@dimen/_15sdp"
       android:layout_marginTop="@dimen/_4sdp"
       android:layout_below="@+id/tv_custom_chanel_count"
     />

</RelativeLayout>
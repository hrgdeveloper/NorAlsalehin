
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_4sdp"
    android:layout_marginBottom="@dimen/_2sdp"
    android:layout_marginEnd="@dimen/_10sdp"
    android:layout_marginLeft="@dimen/_8sdp"
    android:orientation="vertical"
    card_view:cardCornerRadius="@dimen/_5sdp"
    >
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="@dimen/_50sdp"
            android:id="@+id/frame_file"
            android:layout_height="@dimen/_50sdp">

            <com.mikhaellopez.circularprogressbar.CircularProgressBar
                android:id="@+id/cp_file"
                android:layout_width="@dimen/_38sdp"
                android:layout_height="@dimen/_38sdp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_gravity="center"
                app:cpb_background_progressbar_color="@color/cpb_background"
                app:cpb_background_progressbar_width="3dp"
                app:cpb_progressbar_color="@color/cpb_color"
                app:cpb_progressbar_width="6dp"
                />

            <View
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_gravity="center"
                android:id="@+id/view_file_fake"
                app:layout_constraintLeft_toLeftOf="parent"
                android:background="@drawable/rounded_background_audio"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/download"
                android:id="@+id/iv_file_download_open"
                android:tint="@android:color/white"
                android:layout_gravity="center"
                />
        </FrameLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="file.pdf"
            android:id="@+id/tv_file_filename"
            android:textColor="@android:color/black"
            app:layout_constraintLeft_toRightOf="@id/frame_file"
            app:layout_constraintRight_toLeftOf="@+id/tv_file_size"
            android:layout_marginRight="@dimen/_2sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/_5sdp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3.2mb"
            android:id="@+id/tv_file_size"
            android:layout_marginRight="@dimen/_5sdp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/_5sdp"
            />


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_file_text"
            android:layout_marginTop="@dimen/_5sdp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/frame_file"
            app:layout_constraintTop_toBottomOf="@+id/tv_file_filename"
            android:layout_marginRight="@dimen/_5sdp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/like"
            app:layout_constraintRight_toLeftOf="@+id/iv_file_comment"
            android:id="@+id/iv_file_like"
            app:layout_constraintTop_toBottomOf="@id/tv_file_text"
            android:layout_marginEnd="@dimen/_5sdp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/comment"
            android:id="@+id/iv_file_comment"
            app:layout_constraintRight_toLeftOf="@+id/tv_file_time"
            app:layout_constraintTop_toBottomOf="@id/tv_file_text"
            android:layout_marginEnd="@dimen/_5sdp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_file_text"
            android:id="@+id/tv_file_time"
            android:textColor="@android:color/holo_green_dark"
            android:text="14:25"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="@dimen/_5sdp"

            />



    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
